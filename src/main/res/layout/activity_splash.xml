<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:background="@drawable/fakeghost"
    tools:context=".Splash">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    Ghost Annihilator"
        android:id="@+id/gameName"
        android:textSize="70dp"
        android:textAlignment="center"
        android:layout_marginTop="34dp"
        android:phoneNumber="false"
        android:textColor="#0B0070"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/names1"
        android:layout_alignStart="@+id/names1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Group 14:"
        android:id="@+id/groupNumber"
        android:textSize="25dp"
        android:layout_above="@+id/names2"
        android:layout_centerHorizontal="true"
        android:textColor="#0B0070" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scott Boulineaux, Brendan Rogers"
        android:id="@+id/names1"
        android:layout_gravity="center"
        android:layout_marginBottom="31dp"
        android:textAlignment="center"
        android:layout_above="@+id/thisClass"
        android:layout_centerHorizontal="true"
        android:textColor="#0B0070" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CS 2110"
        android:id="@+id/thisClass"
        android:layout_above="@+id/semester"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:textColor="#FAF5F5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Spring 2015"
        android:id="@+id/semester"
        android:layout_marginBottom="44dp"
        android:textColor="#FAF5F5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cassie Willis, Amir Gurung,"
        android:id="@+id/names2"
        android:layout_gravity="center"
        android:layout_above="@+id/names1"
        android:layout_centerHorizontal="true"
        android:textColor="#0B0070" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".MenuActivity" >

    <Button
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="New Game"
        android:id="@+id/newButton"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:onClick="newGame"
        android:layout_toLeftOf="@+id/resumeButton"
        android:layout_toStartOf="@+id/resumeButton"
        android:layout_marginTop="700dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#EAED98"
        android:background="#EAED98" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound On/Off"
        android:onClick="playMusic"
        android:id="@+id/button"
        android:layout_below="@+id/gameName"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="440dp"
        android:layout_height="400dp"
        android:id="@+id/imageView"
        android:contentDescription="@string/ghost"
        android:src="@drawable/menughost"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="Resume Game"
        android:id="@+id/resumeButton"
        android:clickable="true"
        android:onClick="newGame"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="700dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#EAED98"
        android:background="#EAED98" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ghost Annihilator"
        android:id="@+id/gameName"
        android:textAlignment="center"
        android:layout_marginTop="63dp"
        android:textSize="40dp"
        android:textColor="#DDDED3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
